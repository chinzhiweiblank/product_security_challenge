<form action="/auth/signup" method="post">
    <h2 class="text-center">Sign Up</h2>
    <%- include ("partials/errors") %>
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Email" required="required" name="email"
            value="<%= typeof email != 'undefined' ? email : '' %>">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Username" required="required" name="username"
            value="<%= typeof username != 'undefined' ? username : '' %>">
    </div>
    <div class="form-group">
        <input type="password1" class="form-control" placeholder="Password" required="required" name="password1"
            value="<%= typeof password1 != 'undefined' ? password1 : '' %>">
    </div>
    <div class="form-group">
        <input type="password2" class="form-control" placeholder="Reconfirm your password" name="password2" required="required"
            value="<%= typeof password1 != 'undefined' ? password2 : '' %>">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
    </div>
</form>
<p classs="text-center">
    If you have an account, click
    <a href="/auth/login">here</a> to login
</p>