<form action="/auth/reset" method="post">
    <h2 class="text-center">Enter your Reset Token</h2>
    <%- include ("partials/errors") %>
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Reset Token" required="required" name="resetToken"
            value="<%= typeof resetToken != 'undefined' ? resetToken : '' %>">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Password" required="required" name="password"
            value="<%= typeof password != 'undefined' ? password : '' %>">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
    </div>
</form>
<p classs="text-center">
    If you want to login, click
    <a href="/auth/login">here</a> to login
</p>